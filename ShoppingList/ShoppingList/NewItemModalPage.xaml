<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.NewItemModalPage">
	<StackLayout>
		<StackLayout>
			<Label Text="Product name" />
			<Entry Placeholder="Product" />
		</StackLayout>
		<StackLayout>
			<Label Text="Quantity" />
			<StackLayout Orientation="Horizontal">
				<Entry Text="1" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" />
				<Stepper Minimum="1" Maximum="100" Increment="1" HorizontalOptions="Fill" />
			</StackLayout>
		</StackLayout>
		<StackLayout>
			<Label Text="Price" />
			<StackLayout Orientation="Horizontal">
				<Entry Text="0" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" />
				<Label Text="€" FontSize="Large" VerticalOptions="Center" /> <!-- TODO: configure currency -->
			</StackLayout>
		</StackLayout>
	</StackLayout>
</ContentPage>