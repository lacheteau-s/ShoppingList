<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShoppingList"
             x:Class="ShoppingList.Views.HomeView"
			 xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
			 xmlns:core="clr-namespace:ShoppingList.Core"
			 xmlns:views="clr-namespace:ShoppingList.Views"
			 core:ViewModelLocator.AutoWireViewModel="True"
			 BackgroundColor="WhiteSmoke">
	<AbsoluteLayout>
		<StackLayout IsVisible="{Binding HasItems, Converter={StaticResource InverseBooleanConverter}}" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">
			<Image Source="ic_shopping_cart" VerticalOptions="EndAndExpand" Margin="0,0,0,10" />
			<Label Text="Your cart is empty!" TextColor="Gray" FontSize="Large" HorizontalTextAlignment="Center" Margin="0,0,0,50" />
			<Label Text="Add items to your cart" TextColor="Gray" FontSize="Medium" HorizontalTextAlignment="Center" Margin="0,0,0,10" />
			<Button Text="Add new item" TextColor="White" BackgroundColor="#007ACC" VerticalOptions="StartAndExpand" HorizontalOptions="Center"
					WidthRequest="130" HeightRequest="65"
					android:Button.UseDefaultPadding="True" android:Button.UseDefaultShadow="True"
					Command="{Binding AddNewItemCommand}" />
		</StackLayout>
		<StackLayout IsVisible="{Binding HasItems}" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">
			<ListView ItemsSource="{Binding Products}" RowHeight="60" VerticalOptions="FillAndExpand">
				<ListView.ItemTemplate>
					<DataTemplate>
						<views:ProductCellView />
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			<Button Text="Add new item" TextColor="White" BackgroundColor="#007ACC" VerticalOptions="End" HorizontalOptions="Center"
					WidthRequest="130" HeightRequest="65"
					android:Button.UseDefaultPadding="True" android:Button.UseDefaultShadow="True"
					Command="{Binding AddNewItemCommand}" />
		</StackLayout>
	</AbsoluteLayout>
</ContentPage>